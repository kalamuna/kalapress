{
  "$schema": "https://schemas.wp.org/trunk/block.json",
  "apiVersion": 3,
  "name": "native/cards-grid",
  "version": "0.1.0",
  "title": "Cards Grid",
  "category": "kalapress",
  "parent": [
    "native/cards-section"
  ],
  "icon": "grid-view",
  "description": "Display a set of cards in a grid, and add blocks within each card.",
  "keywords": [
    "cards",
    "cards grid",
    "cards section",
    "featured cards"
  ],
  "supports": {
    "html": false,
    "align": [
      "wide",
      "full"
    ],
    "spacing": {
      "margin": [
        "top",
        "bottom"
      ],
      "padding": true
    }
  },
  "attributes": {
    "blockId": {
      "type": "string",
      "default": ""
    },
    "borderRadius": {
      "type": "string",
      "default": "8px"
    },
    "cardColumns": {
      "type": "number",
      "default": 3
    },
    "cardContentPadding": {
      "type": "string",
      "default": "1rem"
    },
    "cardPadding": {
      "type": "string",
      "default": "0"
    },
    "cardBackgroundColor": {
      "type": "string",
      "default": "#fff"
    },
    "cardTextColor": {
      "type": "string",
      "default": "#000"
    },
    "columnGap": {
      "type": "string",
      "default": "1rem"
    },
    "rowGap": {
      "type": "string",
      "default": "1rem"
    }
  },
  "example": {
    "viewportWidth": 960
  },
  "textdomain": "native",
  "editorScript": "file:./index.js",
  "editorStyle": "file:./index.css",
  "style": "file:./style-index.css",
  "render": "file:./render.php"
}